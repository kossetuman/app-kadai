<html>
  <head>
    <title>投稿詳細画面</title>
     <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <h1>Editing Book</h1>
    <%= form_with model:@book, local: true do |f| %>
      <% if @book.errors.any? %>
        <div id="errors-box">
          <h2><%= @book.errors.count %>error prohibited this book from being saved:</h2>
              <% @book.errors.full_messages.each do |message| %>
          <ul>
            <li><%= message %></li>
          </ul>
        <% end %>
       </div>
    <% end %>
      <div class="columu">Title</div>
      <div class="text_field"><%= f.text_field :title %></div>

      <div class="columu">Body</div>
      <div class="text_area"><%= f.text_area :body %></div>

      <div><%= f.submit "Update Book" %></div>
      <div class= "show-back">
        <%= link_to "Show", book_path(@book.id) %>
        |
        <%= link_to "Back", books_path %>
      </div>

    <% end %>
    </body>
  </html>

