<html>
  <head>
    <title>投稿詳細画面</title>
     <%= stylesheet_link_tag '/edit', media: 'all', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <h1>Editing Book</h1>
    <%= form_with model:@book,url:book_path(@book.id), local: true do |f| %>
      <h4>Title</h4>
      <%= f.text_field :title %>
      <h4>Body</h4>
      <%= f.text_area :body %>
      <p><%= f.submit "Update Book" %></p>
      <%= link_to "Show", books_path(@book.id) %>
      |
      <%= link_to "Back", books_path %>

    <% end %>
  </body>

  </html>

