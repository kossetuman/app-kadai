<html>
  <head>
    <title>新規投稿、投稿一覧表示</title>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  </head>
  </head>

  <body>
    <p id= "notice"></p>
   <h1>Bookers</h1>
    <table>
      <thead>
        <tr>
          <th>title</th>
          <th>Body</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <tr>
        <% @books.each do |book| %>
          <td><%= book.title %></td>
          <td><%= book.body %></td>
          <td><%= link_to "Show", book_path(book.id) %></td>
          <td><%= link_to "Edit", edit_books_path(book.id) %></td>
          <td><%= link_to "Destroy", book_path(book.id), method: :delete %></td>
        </tr>
        <% end %>
      </tbody>
    </table>

    <h2>New book</h2>

    <%= form_with model:@book, local:true do|f| %>
    <% if @book.errors.any? %>
      <div id="errors-box">
      <h2><%= @book.errors.count %>error prohibited this book from being saved:</h2>
      <% @book.errors.full_messages.each do |message| %>
      <ul>
        <li><%= message %></li>
      </ul>
      <% end %>
    </div>
    <% end %>

      <div class="columu">Title</div>
      <div class="text_field"><%= f.text_field :title %></div>

      <div class="columu">Body</div>
      <div class="text_area"><%= f.text_area :body %></div>

      <div><%= f.submit "Create Book" %></div>

      <% end %>

  </body>
</html>