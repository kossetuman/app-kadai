<html>
  <head>
    <title>新規投稿、投稿一覧表示</title>
    <%= stylesheet_link_tag '/books', media: 'all', 'data-turbolinks-track': 'reload' %>
  </head>
  </head>

  <body>
    <p id= "notice"></p>
   <h1>Bookers</h1>
    <table>
      <thead>
        <tr>
          <th>title</th>
          <th>Body</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <tr>
        <% @books.each do |book| %>
          <td><%= book.title %></td>
          <td><%= book.body %></td>
          <td><%= link_to "Show", book_path(book.id) %></td>
          <td><%= link_to "Edit", edit_books_path(book.id) %></td>
          <td><%= link_to "Destroy", book_path(book.id), method: :delete %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
    <h2>New book</h2>

    <%= form_with model:@book, local:true do|f| %>
      <h4>Title</h4>
      <%= f.text_field :title %>

      <h4>Body</h4>
      <%= f.text_area :body %>

      <p><%= f.submit "Create Book" %></p>

      <% end %>
  </body>
</html>